<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="HISPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>his.model.Owners</class>
    <class>his.model.Users</class>
    <class>his.model.Manufacturers</class>
    <class>his.model.HardwareHistoryLog</class>
    <class>his.model.Categories</class>
    <class>his.model.UserHistory</class>
    <class>his.model.Hardware</class>
    <class>his.model.Places</class>
    <class>his.model.States</class>
    <class>his.model.Groups</class>
    <properties>
      <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
    </properties>
  </persistence-unit>
</persistence>
